{
  "globals": {
    "sinon": true,
    "expect": true,
  },
  "rules": {
    "max-nested-callbacks": 0,
    "one-var": 0,
    "no-unused-expressions": 0,
    "mocha/no-exclusive-tests": 2,
    "mocha/no-global-tests": 2,
    "mocha/handle-done-callback": 2
  },
  "env": {
    "mocha": true,
  },
  "plugins": [ "mocha" ]
}
